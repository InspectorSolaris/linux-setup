{
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": ["c", "cc", "cpp", "c++", "objc", "objcpp"],
            "rootPatterns": [".git"],
            "initializationOptions": {
                "cache": {
                    "directory": ".ccls-cache"
                },
                "highlight": {
                    "lsRanges": true
                },
                "compilationDatabaseDirectory": "build"
            }
        }
    }
}
